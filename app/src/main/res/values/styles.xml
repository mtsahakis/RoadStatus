<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Install.Widget.Basic.Text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">fill</item>
        <item name="android:padding">1sp</item>
    </style>

    <style name="Install.Widget.Basic.Text.Error" parent="Install.Widget.Basic.Text">
        <item name="android:textColor">@color/colorRedError</item>
    </style>

    <style name="InputEditText.MultipleLines" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="InputEditText.OneLine" parent="@style/InputEditText.MultipleLines">
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonNormal" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
